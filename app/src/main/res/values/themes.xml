<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Pomodoro" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color8</item>
        <item name="colorPrimaryVariant">@color/color7</item>
        <item name="colorOnPrimary">@color/color6</item>
        <item name="colorPrimaryDark">@color/color3</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color9</item>
        <item name="colorSecondaryVariant">@color/color10</item>
        <item name="colorOnSecondary">@color/color0</item>

    </style>

    <style name="Theme.Pomodoro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>
    <style name="Theme.Pomodoro.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pomodoro.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>